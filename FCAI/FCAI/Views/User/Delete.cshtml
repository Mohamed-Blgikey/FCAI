@model ApplicationUser
@{
    ViewData["Title"] = SharedLocalizer["Delete"];
    ViewBag.user = "active";

}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@SharedLocalizer["Home"]</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Student" asp-action="Index">@SharedLocalizer["Student"]</a></li>
                    <li class="breadcrumb-item active">@SharedLocalizer["Delete"]</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <form asp-controller="User" asp-action="Delete" class="w-75 mx-auto">
            <div class="form-group">
                <input asp-for="Id" type="text" hidden />
            </div>
            <div class="form-group">
                <label asp-for="UserName">@SharedLocalizer["User Name"] :</label>
                <input asp-for="UserName" class="form-control" type="text" readonly/>
            </div>

            <div class="form-group">
                <label asp-for="Email">@SharedLocalizer["Email"] :</label>
                <input asp-for="Email" class="form-control" type="text" readonly/>

            </div>


            <div class="text-center">
                <button type="submit" class="btn btn-outline-danger">@SharedLocalizer["Delete"]</button>
                <a asp-controller="User" asp-action="Index" class="btn btn-outline-info">@SharedLocalizer["Back"]</a>
            </div>
        </form>
    </div>
</section>
