@model FCAI.BL.Model.CourseInstVM
@inject FCAI.BL.Interface.IInstractorRep Inst
@inject FCAI.BL.Interface.ICourseRep Course
@{
    ViewData["Title"] = SharedLocalizer["Edit"];
    ViewBag.inst = "active";

}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@SharedLocalizer["Home"]</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Department" asp-action="Index">@SharedLocalizer["Instractor"]</a></li>
                    <li class="breadcrumb-item active">@SharedLocalizer["Edit"]</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<!-- Main content -->
<section class="content">
    <div>@ViewBag.x</div>
    <div class="container-fluid">
        <form asp-controller="CourseInst" asp-action="Edit" class="w-75 mx-auto">

            <div class="form-group">
                <label asp-for="Inst_Id">Instractor</label>
                <select asp-for="Inst_Id" class="form-control">
                    <option>Select Instractor</option>
                    @foreach (var item in Inst.Get())
                    {
                        <option value="@item.ID">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input asp-for="Course" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <input asp-for="Instractor" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="c_Id">Instractor</label>
                <select asp-for="c_Id" class="form-control">
                    <option>Select Course</option>
                    @foreach (var item in Course.Get())
                    {
                        <option value="@item.ID">@item.Name</option>
                    }
                </select>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-outline-success">@SharedLocalizer["Save"]</button>
                <button type="reset" class="btn btn-outline-danger">@SharedLocalizer["Cancel"]</button>
                <a asp-controller="CourseInst" asp-action="Index" class="btn btn-outline-info">@SharedLocalizer["Back"]</a>
            </div>
        </form>
    </div>
</section>

@section Valid{
    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}