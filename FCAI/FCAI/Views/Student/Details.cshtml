@model FCAI.BL.Model.StudentVM

@{
    ViewData["Title"] = SharedLocalizer["Details"];
    ViewBag.std = "active";

}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@SharedLocalizer["Home"]</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Student" asp-action="Index">@SharedLocalizer["Student"]</a></li>
                    <li class="breadcrumb-item active">@SharedLocalizer["Details"]</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <form class="w-75 mx-auto">
            <div class="form-group">
                <label asp-for="Name">@SharedLocalizer["Name"] :</label>
                <input asp-for="Name" class="form-control" type="text" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Code">@SharedLocalizer["Code"] :</label>
                <input asp-for="Code" class="form-control" type="text" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Email">@SharedLocalizer["Email"] :</label>
                <input asp-for="Email" class="form-control" type="text" disabled/>
            </div>

            <div class="form-group">
                <label>@SharedLocalizer["Department"] :</label>
                <input asp-for="department.Name" class="form-control" type="text" disabled />
            </div>

            <div class="text-center">
                @if (signInManger.IsSignedIn(User) && (User.IsInRole("admin") || User.IsInRole("super admin")))
                {
                    <a asp-controller="Student" asp-action="Edit" class="btn btn-outline-warning" asp-route-id="@Model.ID">@SharedLocalizer["Edit"]</a>
                    <a asp-controller="Student" asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@Model.ID">@SharedLocalizer["Delete"]</a>
                }
                    <a asp-controller="Student" asp-action="Index" class="btn btn-outline-info">@SharedLocalizer["Back"]</a>
                </div>
        </form>
    </div>
</section>



