@model IdentityRole
@{
    ViewData["Title"] = SharedLocalizer["Edit"];
    ViewBag.role = "active";

}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@SharedLocalizer["Home"]</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Roles" asp-action="Index">@SharedLocalizer["Role"]</a></li>
                    <li class="breadcrumb-item active">@SharedLocalizer["Edit"]</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <form asp-controller="Roles" asp-action="Edit" class="w-75 mx-auto">
            <div class="form-group">
                <input asp-for="Id" type="text" hidden />
            </div>
            <div class="form-group">
                <label asp-for="Name">@SharedLocalizer["User Name"] :</label>
                <input asp-for="Name" class="form-control" type="text" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

           

            <div class="text-center">
                <button type="submit" class="btn btn-outline-success">@SharedLocalizer["Edit"]</button>
                <a asp-controller="Roles" asp-action="AddOrRemoveUser" asp-route-RoleId="@Model.Id" class="btn btn-outline-warning">Add Or Remove User</a>
                <a asp-controller="Roles" asp-action="Index" class="btn btn-outline-info">@SharedLocalizer["Back"]</a>
            </div>
        </form>
    </div>
</section>

@section Valid{
    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}