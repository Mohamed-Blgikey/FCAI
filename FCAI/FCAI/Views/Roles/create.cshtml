@model IdentityRole
@{
    ViewData["Title"] = SharedLocalizer["Create"];
    ViewBag.role = "active";

}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@SharedLocalizer["Home"]</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Department" asp-action="Index">@SharedLocalizer["Instractor"]</a></li>
                    <li class="breadcrumb-item active">@SharedLocalizer["Create"]</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<!-- Main content -->
<section class="content">
    <div>@ViewBag.x</div>
    <div class="container-fluid">
        <form asp-controller="Roles" asp-action="Create" class="w-75 mx-auto">
            <div class="form-group">
                <label asp-for="Name">@SharedLocalizer["Name"] :</label>
                <input asp-for="Name" class="form-control" type="text" autofocus />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-outline-success">@SharedLocalizer["Save"]</button>
                <button type="reset" class="btn btn-outline-danger">@SharedLocalizer["Cancel"]</button>
                <a asp-controller="Roles" asp-action="Index" class="btn btn-outline-info">@SharedLocalizer["Back"]</a>
            </div>
        </form>
    </div>
</section>

@section Valid{
    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}