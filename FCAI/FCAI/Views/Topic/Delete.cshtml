@model FCAI.BL.Model.TopicVM
@inject FCAI.BL.Interface.ICourseRep CrsRep
@{
    ViewData["Title"] = SharedLocalizer["Delete"];
    ViewBag.top = "active";

}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@SharedLocalizer["Home"]</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Topic" asp-action="Index">@SharedLocalizer["Topics"]</a></li>
                    <li class="breadcrumb-item active">@SharedLocalizer["Delete"]</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <form asp-controller="Topic" asp-action="Delete" class="w-75 mx-auto">
            <div class="form-group">
                <label asp-for="Name">@SharedLocalizer["Name"] :</label>
                <input asp-for="Name" class="form-control" type="text" readonly />
            </div>

            


            <div class="form-group">
                <label asp-for="Course">@SharedLocalizer["Course"] :</label>
                <select asp-for="CourseId" class="form-control" type="text" disabled>
                    <option>Select Course</option>
                    @foreach (var item in CrsRep.Get())
                    {
                        <option value="@item.ID">@item.Name</option>
                    }
                </select>
            </div>





            <div class="text-center">
                <button type="submit" class="btn btn-outline-success">@SharedLocalizer["Save"]</button>
                <a asp-controller="Topic" asp-action="Index" class="btn btn-outline-info">@SharedLocalizer["Back"]</a>
            </div>
        </form>
    </div>
</section>
