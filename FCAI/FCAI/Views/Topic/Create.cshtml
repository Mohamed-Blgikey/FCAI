@model FCAI.BL.Model.TopicVM
@inject FCAI.BL.Interface.ICourseRep CrsRep
@{
    ViewData["Title"] = SharedLocalizer["Create"];
    ViewBag.top = "active";

}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@SharedLocalizer["Home"]</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Topic" asp-action="Index">@SharedLocalizer["Topic"]</a></li>
                    <li class="breadcrumb-item active">@SharedLocalizer["Create"]</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <form asp-controller="Topic" asp-action="Create" class="w-75 mx-auto">
            <div class="form-group">
                <label asp-for="Name">@SharedLocalizer["Name"] :</label>
                <input asp-for="Name" class="form-control" type="text" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            

            <div class="form-group">
                <label asp-for="Course">@SharedLocalizer["Course"] :</label>
                <select asp-for="CourseId" class="form-control" type="text" >
                    <option>Select Course</option>
                    @foreach (var item in CrsRep.Get())
                    {
                        <option value="@item.ID">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>





            <div class="text-center">
                <button type="submit" class="btn btn-outline-success">@SharedLocalizer["Save"]</button>
                <button type="reset" class="btn btn-outline-danger">@SharedLocalizer["Cancel"]</button>
                <a asp-controller="Topic" asp-action="Index" class="btn btn-outline-info">@SharedLocalizer["Back"]</a>
            </div>
        </form>
    </div>
</section>

@section Valid{
    <script src="~/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}