@model FCAI.BL.Model.DepartmentVM
@{
    ViewData["Title"] = SharedLocalizer["Details"];
    ViewBag.dept = "active";

}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">@SharedLocalizer["Home"]</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Department" asp-action="Index">@SharedLocalizer["Department"]</a></li>
                    <li class="breadcrumb-item active">@SharedLocalizer["Details"]</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <form class="w-75 mx-auto">
            <div class="form-group">
                <label asp-for="Name">@SharedLocalizer["Name"] :</label>
                <input asp-for="Name" class="form-control" type="text" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Code">@SharedLocalizer["Code"] :</label>
                <input asp-for="Code" class="form-control" type="text" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Manger.Name">@SharedLocalizer["Manger"] :</label>
                <input asp-for="Manger.Name" class="form-control" type="text" disabled />
            </div>



            <div class="text-center">
                @if (signInManger.IsSignedIn(User) && (User.IsInRole("admin") || User.IsInRole("super admin")))
                {
                    <a asp-controller="Department" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">@SharedLocalizer["Edit"]</a>
                    <a asp-controller="Department" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">@SharedLocalizer["Delete"]</a>
                }
                    <a asp-controller="Department" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-outline-info">@SharedLocalizer["Back"]</a>
                </div>
        </form>
    </div>
</section>

